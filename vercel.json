{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend-go/cmd/server/main.go",
            "use": "@vercel/go"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "/backend-go/cmd/server/main.go"
        },
        {
            "src": "/health",
            "dest": "/backend-go/cmd/server/main.go"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "env": {
        "GO111MODULE": "on"
    }
}