# Application
APP_NAME=SnapTalker
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://snaptalker:snaptalker_password@localhost:5432/snaptalker
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (for Celery and Rate Limiting)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Storage
MEDIA_ROOT=/var/snaptalker/media
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_EXTENSIONS=mp4,webm,mov

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# AI Moderation
MODERATION_ENABLED=True
MODERATION_TOXICITY_THRESHOLD=0.7
MODERATION_AUTO_FLAG_THRESHOLD=0.85
MODERATION_AUTO_REMOVE_THRESHOLD=0.95

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/snaptalker/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Email (for future notifications - using local SMTP or service)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@snaptalker.com
