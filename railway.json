{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd backend-go && chmod +x railway-deploy.sh && ./railway-deploy.sh"
    },
    "deploy": {
        "startCommand": "cd backend-go && ./server",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}